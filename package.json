{
    "name": "fake_blog_fe",
    "version": "1.0.0",
    "description": "FE for blog app",
    "main": "index.tsx",
    "scripts": {
        "start": "webpack serve --config webpack.dev.ts --hot",
        "build": "webpack --config webpack.dev.ts",
        "build:dev": "webpack --watch --config webpack.dev.ts",
        "build:prod": "webpack --config webpack.prod.ts",
        "test": "jest --verbose --logHeapUsage",
        "test:unit-ci": "cross-env CI=true npm run test --coverage --bail --watchAll=false",
        "test:unit": "npm run test --watchAll"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@trivago/prettier-plugin-sort-imports": "^2.0.2",
        "@types/dotenv": "^8.2.0",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.4.13",
        "@types/react": "^17.0.16",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.29.0",
        "@typescript-eslint/parser": "^4.29.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-unused-imports": "^1.1.2",
        "html-webpack-plugin": "^5.3.2",
        "jest": "^27.0.6",
        "prettier": "^2.3.2",
        "react-refresh": "^0.10.0",
        "ts-jest": "^27.0.4",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5",
        "webpack": "^5.49.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2",
        "webpack-merge": "^5.8.0"
    },
    "dependencies": {
        "@material-ui/core": "^4.12.3",
        "@material-ui/icons": "^4.11.2",
        "@material-ui/lab": "^4.0.0-alpha.60",
        "@material-ui/styles": "^4.11.4",
        "dotenv": "^10.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.stories.*"
                ],
                "rules": {
                    "import/no-anonymous-default-export": "off"
                }
            }
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "coverageThreshold": {
            "global": {
                "statements": 90,
                "branches": 90,
                "functions": 90,
                "lines": 90
            }
        },
        "coverageReporters": [
            "json",
            "html",
            "text",
            "text-summary"
        ],
        "collectCoverageFrom": [
            "src/components/**/*.{js,jsx,ts,tsx}",
            "!<rootDir>/src/**/*.stories.component.{js,jsx,ts,tsx}",
            "!<rootDir>/src/**/*.stories.{js,jsx,ts,tsx}",
            "!<rootDir>/src/stories/**/*",
            "!<rootDir>/node_modules/*"
        ],
        "moduleNameMapper": {
            ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
        },
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/__tests__/**/*.+(ts|tsx|js)",
            "**/?(*.)+(spec|test).+(ts|tsx|js)"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": ["@testing-library/jest-dom/extend-expect"]
    }
}
